{% extends '::base.html.twig' %}

{% block body -%}
    {{ parent() }}
    <div class="panel panel-default">

        <div class="panel-heading">
            <span class="glyphicon glyphicon-record"></span>
            <h3 class="panel-title" style="display: inline;">Detalle Tasa Interes</h3>
        </div>

        <div id="yw0" class="panel-body table-responsive">

            <table class="records_list table table-bordered table-striped table-hover" border="1">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Ingreso en Salarios Mínimos</th>
                        <td>{{ entity.proporcionSalario }}</td>
                    </tr>
                    <tr>
                        <th>% del Subsidio</th>
                        <td>{{ entity.porcentajeSubsidio }}</td>
                    </tr>
                    <tr>
                        <th>Estatus</th>
                        <td>{{ entity.estatus }}</td>
                    </tr>
                    <tr>
                        <th>Fecha Actualización</th>
                        <td>{{ entity.fechaActualizacion|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Fechacreacion</th>
                        <td>{{ entity.fechaCreacion|date('Y-m-d H:i:s') }}</td>
                    </tr>

                </tbody>
            </table>
            <br>

            <div class="delete">
                <div class="row">
                    <div class="col-md-2">
                        <a href="{{ path('condicionessubsidio_edit', { 'id': entity.id }) }}" class="btn btn-warning">Modificar</a>
                    </div>                    
                    <div class="col-md-2">
                        {% if delete_form is defined %}
                            {{ form(delete_form) }}
                        {% endif %} 
                    </div>
                </div>                
            </div>
        </div>
    </div>

    <div align="right">
        <a href="{{ path('condicionessubsidio') }}" class="btn btn-success" role="button">Volver</a>
    </div>

    <br>            
{% endblock %}

