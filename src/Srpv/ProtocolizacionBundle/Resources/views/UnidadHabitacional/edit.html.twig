{% extends '::base.html.twig' %}

{% block body -%}
    {% block stylesheets %}
        
        {{ parent() }}
        
        <link type="text/css" href="{{ asset('js/css/smoothness/jquery-ui-1.8.14.custom.css') }}" type="text/css" rel="stylesheet" />
        
    {% endblock %}
    {{ form(edit_form, { 'attr': {'id': 'formulario'}, 'style': 'horizontal', 'label_col': 4, 'widget_col':4 }) }}
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="glyphicon glyphicon-plus-sign"></span>
            <h3 class="panel-title" style="display: inline;">Agregar Unidad Habitacional</h3>
        </div>
        <div id="yw0" class="panel-body">
            {{ form_errors(edit_form) }}
            <div class="form-group">
                {{ form_row(edit_form.desarrollo) }}
            </div>
            <div class="form-group">
                {{ form_row(edit_form.nombre) }}
            </div>
            <div class="form-group" id="genTipoInmueble">
                {{ form_row(edit_form.genTipoInmueble) }}
            </div>
            <div class="form-group" id="registroPublicoId">
                {{ form_row(edit_form.registroPublicoId) }}
            </div>
            <div class="form-group" id="fechaRegistro">
                {{ form_row(edit_form.fechaRegistro) }}
            </div>
            <div class="form-group" id="nroDocumento">
                {{ form_row(edit_form.nroDocumento) }}
            </div>
            <div class="form-group" id="tomo">
                {{ form_row(edit_form.tomo) }}
            </div>
            <div class="form-group" id="ano">
                {{ form_row(edit_form.ano) }}
            </div>
            <div class="form-group" id="nroProtocolo">
                {{ form_row(edit_form.nroProtocolo) }}
            </div>
            <div class="form-group" id="asientoRegistral">
                {{ form_row(edit_form.asientoRegistral) }}
            </div>
            <div class="form-group" id="folioReal">
                {{ form_row(edit_form.folioReal) }}
            </div>
            <div class="form-group" id="nroMatricula">
                {{ form_row(edit_form.nroMatricula) }}
            </div>
            <div class="form-group" id="tipoDocumento">
                {{ form_row(edit_form.tipoDocumento) }}
            </div>
        </div>
    </div>
    <div align="center">
        {{ form_widget(edit_form.submit) }}
        {% if delete_form is defined %}
            {{ form(delete_form) }}
        {% endif %}
        <a href="{{ path('desarrollo') }}" class="btn btn-success" role="button">Volver</a>  
    </div>
{{ form_end(edit_form) }}
    <br>    
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/js/jquery-1.7.2.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.validate.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery-ui-1.8.19.custom/js/jquery-ui-1.8.19.custom.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/validacionesGenerales.js') }}"></script>
    <script>
        $(document).ready(function(){
            $("#srpv_protocolizacionbundle_unidadhabitacional_fechaRegistro").datepicker({
                dateFormat: 'dd/mm/yy',
                changeMonth: true,
                changeYear: true,
                dayNamesMin: ['D', 'L', 'M', 'M', 'J', 'V', 'S'],
                firstDay: 1,
                minDate: 0,
                monthNamesShort: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic']
            });
        });
    </script>
{% endblock %}
