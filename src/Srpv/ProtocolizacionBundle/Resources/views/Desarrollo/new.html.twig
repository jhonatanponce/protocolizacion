{% extends '::base.html.twig' %}

{% block body -%}
    {% block stylesheets %}

    {{ parent() }}

      <link type="text/css" href="{{ asset('js/css/smoothness/jquery-ui-1.8.14.custom.css') }}" type="text/css" rel="stylesheet" />

    {% endblock %}
    <div class="panel panel-default">
        
        <div class="panel-heading">
            <span class="glyphicon glyphicon-plus-sign"></span>
            <h3 class="panel-title" style="display: inline;">Agregar Desarrollo Habitacional</h3>
        </div>
        {{ form_start(form, { 'style': 'horizontal', 'label_col': 4, 'widget_col':4 }) }}
        <div id="yw0" class="panel-body">
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_row(form.nombre) }}
            </div>
            <div class="form-group">
                {{ form_row(form.geoEstado) }}
            </div>
            <div class="form-group" id="geoMunicipio">
                {{ form_row(form.geoMunicipio) }}
            </div>
            <div class="form-group" id="geoParroquia">
                {{ form_row(form.geoParroquia) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    <div align="right">
        <a href="{{ path('desarrollo') }}" class="btn btn-success" role="button">Volver</a>
    </div>
    <br>         
{% endblock %}
{% block javascripts %}
    {{ parent() }}
<script>
    $(document).ready(function(){
        $('#srpv_protocolizacionbundle_desarrollo_geoEstado').change(function(event){
            var id = $('#srpv_protocolizacionbundle_desarrollo_geoEstado').find(':selected').val();
            //descomentar cuando ya se tenga dominio
            //$('#desarrollo').load('/updateDesarollo/'+id);
            $('#geoMunicipio').load('/web/app.php/updateMunicipio/'+id);
        });
    });
</script>
<script type="text/javascript" src="{{ asset('js/js/jquery-1.7.2.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/jquery-validation-1.9.0/jquery.validate.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/jquery-ui-1.8.19.custom/js/jquery-ui-1.8.19.custom.min.js') }}"></script>
<script>
  $(document).ready(function(){
      $("#srpv_protocolizacionbundle_desarrollo_fechaTransferencia").datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
        dayNamesMin: ['D', 'L', 'M', 'M', 'J', 'V', 'S'],
        firstDay: 1,
        minDate: 0,
        monthNamesShort: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic']
    });
  });
</script>
{% endblock %}