{% extends '::base.html.twig' %}

{% block body -%}
   {{ parent() }}
    <div class="panel panel-default">

        <div class="panel-heading">
            <span class="glyphicon glyphicon-record"></span>
            <h3 class="panel-title" style="display: inline;">Detalle Rol de Usuario</h3>
        </div>

        <div id="yw0" class="panel-body table-responsive">

            <table class="records_list table table-bordered table-striped table-hover" border="1">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Descripcion</th>
                        <td>{{ entity.descripcion }}</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ entity.nombre }}</td>
                    </tr>
                </tbody>
            </table>

       <br>

            <div class="delete">
                <div class="row">
                    <div class="col-md-2">
                        <a href="{{ path('rol_edit', { 'id': entity.id }) }}" class="btn btn-warning">Modificar</a>
                    </div>                    
                    <div class="col-md-2">
                        {% if delete_form is defined %}
                            {{ form(delete_form) }}
                        {% endif %} 
                    </div>
                </div>                
            </div>
        </div>
    </div>

    <div align="right">
        <a href="{{ path('rol') }}" class="btn btn-success" role="button">Volver</a>
    </div>

    <br>            
{% endblock %}
